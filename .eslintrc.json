{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:import/warnings"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-extra-semi": "error",
    "no-duplicate-imports": "error",
    "indent": ["error", 2],
    "max-len": [2, { "code": 140 }],
    "import/extensions": [
      "error",
      {
        "ignorePackages": true,
        "pattern": {
          "ts": "never",
          "json": "never"
        }
      }
    ],
    "no-underscore-dangle": "off",
    "comma-spacing": 2,
    "comma-dangle": ["error", "never"],
    "no-unused-vars": "off",
    "semi": ["error", "never"],
    "quotes": [2, "single"]
  }
}
